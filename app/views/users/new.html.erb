<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">


        <%= form_tag("/users/create") do %>

          <p>ユーザー名</p>
          <% @user.errors.full_messages_for(:name).each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <input name="name" value="<%= @user.name %>">

          <p>性別</p>
          <% if @error_message %>
            <div class="form-error">
              <%= @error_message %>
            </div>
          <% end %>
          <input id="male" type="radio" name="sex" value="男" />
          <label for="male">男</label>
          <input id="female" type="radio" name="sex" value="女" />
          <label for="female">女</label>
          <input id="others" type="radio" name="sex" value="その他" />
          <label for="others">その他</label>


          <p>メールアドレス</p>
          <% @user.errors.full_messages_for(:email).each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <input name="email" value="<%= @user.email %>">

          <p>パスワード</p>
          <% @user.errors.full_messages_for(:password).each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <input type="password" name="password" value="<%= @user.password %>">
          <input type="submit" value="新規登録">
        <% end %>
      </div>
    </div>
  </div>
</div>